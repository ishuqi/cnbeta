<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp">

    <TextView
        android:id="@+id/topten_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/topten_read_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/topten_title"
        android:layout_below="@id/topten_title"
        android:layout_marginTop="8dp"
        android:text="999次阅读"
        android:textSize="12sp"
        android:textColor="#666"
        />

    <TextView
        android:id="@+id/topten_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/topten_read_count"
        android:layout_below="@id/topten_title"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="999个评论"
        android:textSize="12sp"
        android:textColor="#666"
        />

</RelativeLayout>